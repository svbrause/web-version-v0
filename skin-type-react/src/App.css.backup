/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Monochromatic Color Palette */
  --bg-primary: #F8F4ED;
  --bg-secondary: #EAE5DE;
  --text-primary: #4A4640;
  --text-secondary: #6E685C;
  --accent-dark: #4A4640;
  --accent-light: #D4CFC4;
  --white: #FFFFFF;
  --progress-track: #E5E0D8;
  /* Pastel colors for unselected options */
  --pastel-beige: #E5DDD3;
  --pastel-cream: #E8DFD5;
  /* Selected state - dark gray background */
  --selected-bg: #4A4640;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  min-height: 100vh;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* App Container */
.app-container {
  max-width: 428px;
  margin: 0 auto;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  position: relative;
}

/* Header */
.header {
  padding: 16px 20px 12px;
  display: flex;
  align-items: center;
  gap: 16px;
}

.back-button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 2.5px solid var(--accent-dark);
  background-color: transparent;
  color: var(--accent-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.back-button:hover {
  background-color: rgba(74, 70, 64, 0.1);
}

.back-button:active {
  transform: scale(0.95);
}

.back-button svg {
  width: 20px;
  height: 20px;
}

.progress-bar {
  flex: 1;
  height: 4px;
  background-color: var(--progress-track);
  border-radius: 2px;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background-color: var(--accent-dark);
  border-radius: 2px;
  transition: width 0.3s ease;
  width: 25%;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 24px 20px;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  min-height: 0;
}

/* Question View */
.question-view {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.main-question {
  font-size: 28px;
  font-weight: 700;
  line-height: 1.2;
  color: var(--text-primary);
  margin-bottom: 12px;
}

.subtitle {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
  color: var(--text-primary);
  margin-top: -8px;
  margin-bottom: 8px;
}

/* Skin Type Grid */
.skin-type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-top: 16px;
  justify-items: center;
  max-width: 100%;
  position: relative;
}

.skin-type-grid .skin-type-option:nth-child(4) {
  grid-column: 1;
  justify-self: center;
  transform: translateX(50px);
}

.skin-type-grid .skin-type-option:nth-child(5) {
  grid-column: 3;
  justify-self: center;
  transform: translateX(-50px);
}

.skin-type-option {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: none;
  background-color: var(--pastel-beige);
  color: var(--accent-dark);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6px;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 16px 12px;
}

.skin-type-option:hover:not(.selected) {
  background-color: var(--pastel-cream);
}

.skin-type-option:active {
  transform: scale(0.95);
}

.skin-type-option.selected {
  background-color: var(--selected-bg);
  color: var(--white);
  border: none;
  box-shadow: 0 2px 8px rgba(74, 70, 64, 0.2);
}

/* Make SVG icons white when selected */
.skin-type-option.selected .skin-type-icon {
  color: var(--white);
}

.skin-type-option.selected .skin-type-icon svg {
  color: var(--white);
}

.skin-type-option.selected .skin-type-icon svg path,
.skin-type-option.selected .skin-type-icon svg rect,
.skin-type-option.selected .skin-type-icon svg circle,
.skin-type-option.selected .skin-type-icon svg polygon,
.skin-type-option.selected .skin-type-icon svg polyline {
  fill: var(--white);
  stroke: var(--white);
}

/* Make text white when selected */
.skin-type-option.selected span {
  color: var(--white);
}

/* Ensure unselected icons are dark */
.skin-type-option:not(.selected) .skin-type-icon {
  color: var(--accent-dark);
}

.skin-type-option:not(.selected) .skin-type-icon svg {
  color: var(--accent-dark);
}

.skin-type-option:not(.selected) .skin-type-icon svg path,
.skin-type-option:not(.selected) .skin-type-icon svg rect,
.skin-type-option:not(.selected) .skin-type-icon svg circle,
.skin-type-option:not(.selected) .skin-type-icon svg polygon,
.skin-type-option:not(.selected) .skin-type-icon svg polyline {
  fill: var(--accent-dark);
  stroke: var(--accent-dark);
}

.skin-type-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  flex-shrink: 0;
}

.skin-type-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.skin-type-icon svg {
  width: 100%;
  height: 100%;
  transition: all 0.2s ease;
}

.skin-type-option span {
  font-size: 14px;
  font-weight: 500;
  text-align: center;
  transition: color 0.2s ease;
  color: var(--accent-dark);
}

/* Characteristics Container */
.characteristics-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 20px;
  margin-bottom: 12px;
  max-height: none; /* Remove height restriction to prevent cut-off */
  overflow: visible; /* Allow all content to be visible */
  justify-content: flex-start;
  align-items: flex-start;
}

.characteristic-tag {
  padding: 10px 16px;
  border-radius: 16px;
  border: 1px solid var(--pastel-cream);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 13px;
  font-weight: 400;
  line-height: 1.4;
  white-space: nowrap;
  transition: all 0.2s ease;
}

/* Detail View */
.detail-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 20px;
  padding: 20px 0;
}

.detail-view.hidden {
  display: none;
}

.detail-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.detail-label {
  font-size: 16px;
  font-weight: 400;
  color: var(--text-primary);
}

.detail-title {
  font-size: 36px;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.2;
}

.detail-icon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 8px 0;
}

.detail-icon svg {
  width: 100%;
  height: 100%;
  color: var(--accent-dark);
}

.detail-icon svg path,
.detail-icon svg rect,
.detail-icon svg circle,
.detail-icon svg polygon,
.detail-icon svg polyline {
  fill: var(--accent-dark);
  stroke: var(--accent-dark);
}

.detail-description {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.6;
  color: var(--text-primary);
  text-align: left;
  max-width: 100%;
  padding: 0 8px;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: center;
  margin-top: 8px;
}

.detail-tag {
  padding: 10px 18px;
  border-radius: 24px;
  border: 1.5px solid var(--accent-dark);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 400;
}

/* Questions View */
.questions-view {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.questions-view.hidden {
  display: none;
}

.question-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 8px;
}

.question-option {
  padding: 16px 20px;
  border-radius: 16px;
  border: none;
  background-color: var(--pastel-beige);
  color: var(--accent-dark);
  font-size: 16px;
  font-weight: 400;
  text-align: left;
  cursor: pointer;
  transition: all 0.2s ease;
}

.question-option:hover:not(.selected) {
  background-color: var(--pastel-cream);
}

.question-option:active {
  transform: scale(0.98);
}

.question-option.selected {
  background-color: var(--selected-bg);
  color: var(--white);
  border: none;
}

/* Bottom Navigation */
.bottom-nav {
  /* Container no longer needed since button is fixed outside */
  display: none;
}

.next-button {
  position: fixed;
  bottom: 24px;
  right: 24px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  border: none;
  background-color: var(--accent-dark);
  color: var(--white);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(74, 70, 64, 0.3);
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

.next-button:not(:disabled) {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.next-button:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: 0 6px 16px rgba(74, 70, 64, 0.4);
}

.next-button:active:not(:disabled) {
  transform: scale(0.95);
}

.next-button:disabled {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  cursor: not-allowed;
  transform: none;
}


.next-button svg {
  width: 24px;
  height: 24px;
}

/* Concerns Grid */
.concerns-grid {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 24px;
}

.concern-card {
  padding: 16px 20px;
  border-radius: 16px;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.concern-card:hover {
  background-color: var(--pastel-cream);
}

.concern-card:active {
  transform: scale(0.98);
}

.concern-card.selected {
  background-color: var(--accent-dark);
  color: var(--white);
}

.concern-card-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.concern-card-title {
  font-size: 16px;
  font-weight: 600;
  margin: 0;
  line-height: 1.3;
}

.concern-card-description {
  font-size: 13px;
  font-weight: 400;
  margin: 0;
  line-height: 1.4;
  opacity: 0.8;
}

.concern-card.selected .concern-card-description {
  opacity: 0.9;
}

/* Areas Grid */
.areas-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  margin-top: 24px;
}

.area-card {
  padding: 16px 12px;
  border-radius: 16px;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60px;
}

.area-card:hover {
  background-color: var(--pastel-cream);
}

.area-card:active {
  transform: scale(0.97);
}

.area-card.selected {
  background-color: var(--accent-dark);
  color: var(--white);
}

.area-card-title {
  font-size: 14px;
  font-weight: 500;
  line-height: 1.3;
}

/* Selection Count */
.selection-count {
  margin-top: 16px;
  font-size: 13px;
  font-weight: 400;
  color: var(--text-secondary);
  text-align: center;
}

/* Age Ranges */
.age-ranges {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 24px;
  justify-content: center;
}

.age-range-option {
  padding: 16px 28px;
  border-radius: 24px;
  border: none;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  font-size: 16px;
  font-weight: 400;
  cursor: pointer;
  transition: all 0.2s ease;
  display: inline-block;
  min-width: 100px;
  text-align: center;
}

.age-range-option:hover {
  background-color: var(--pastel-cream);
}

.age-range-option:active {
  transform: scale(0.98);
}

.age-range-option input[type="radio"] {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.age-range-option:has(input:checked) {
  background-color: var(--accent-dark);
  color: var(--white);
  border: none;
  font-weight: 600;
}

/* Skin Tone Scale */
.skin-tone-scale {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 24px;
  justify-content: center;
}

.skin-tone-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  padding: 8px;
  border-radius: 12px;
  transition: all 0.2s ease;
}

.skin-tone-option input[type="radio"] {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.skin-tone-swatch {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: none;
  transition: all 0.2s ease;
}

.skin-tone-option:has(input:checked) .skin-tone-swatch {
  transform: scale(1.1);
  box-shadow: 0 0 0 4px var(--pastel-cream);
}

.skin-tone-option span {
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
}

.skin-tone-option:has(input:checked) span {
  font-weight: 600;
  color: var(--accent-dark);
}

/* Sun Response Grid */
.sun-response-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  margin-top: 24px;
}

.sun-response-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px 8px;
  background-color: var(--pastel-beige);
  border: none;
  border-radius: 16px;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: center;
}

.sun-response-card:hover {
  background-color: var(--pastel-cream);
}

.sun-response-card:active {
  transform: scale(0.97);
}

.sun-response-card input[type="radio"] {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.sun-response-icon {
  width: 32px;
  height: 32px;
  display: block;
}

.sun-response-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.sun-response-card:has(input:checked) .sun-response-icon img {
  filter: brightness(0) invert(1);
}

.sun-response-card span {
  font-size: 12px;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.3;
}

.sun-response-card:has(input:checked) {
  background-color: var(--accent-dark);
  border: none;
}

.sun-response-card:has(input:checked) span {
  color: var(--white);
  font-weight: 600;
}

/* Ethnic Pills */
.ethnic-pills {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 24px;
}

.ethnic-pill {
  padding: 12px 20px;
  border-radius: 24px;
  border: none;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 400;
  cursor: pointer;
  transition: all 0.2s ease;
  display: inline-block;
}

.ethnic-pill:hover {
  background-color: var(--pastel-cream);
}

.ethnic-pill:active {
  transform: scale(0.98);
}

.ethnic-pill input[type="radio"] {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

.ethnic-pill:has(input:checked) {
  background-color: var(--accent-dark);
  color: var(--white);
  border: none;
  font-weight: 600;
}

/* Review Screen */
.review-sections {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-top: 24px;
}

.review-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.review-section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.review-items {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.review-item {
  padding: 12px 16px;
  border-radius: 12px;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 400;
}

/* Results Screen - Simple Rebuild */
.results-screen {
  width: 100%;
  display: block;
  visibility: visible;
  opacity: 1;
  position: relative;
  z-index: 10;
}

.results-screen.hidden {
  display: none !important;
}

/* Override .results-screen.hidden when header-hidden is active */
.app-container.header-hidden .results-screen.hidden {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
}

.results-title {
  font-size: 28px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 8px 0;
}

.results-subtitle {
  font-size: 16px;
  font-weight: 400;
  color: var(--text-secondary);
  margin: 0 0 24px 0;
}

.results-tabs {
  display: flex;
  gap: 8px;
  overflow-x: auto;
  margin-bottom: 24px;
  padding-bottom: 8px;
  scrollbar-width: none;
}

.results-tabs::-webkit-scrollbar {
  display: none;
}

.results-tab {
  padding: 10px 20px;
  border-radius: 20px;
  border: none;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  white-space: nowrap;
  flex-shrink: 0;
}

.results-tab.active {
  background-color: var(--accent-dark);
  color: var(--white);
}

.results-content {
  margin-bottom: 24px;
  min-height: 200px;
}

/* Treatment Groups Container */
.treatment-groups-container {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

/* Treatment Group Card */
.treatment-group-card {
  border-radius: 16px;
  background-color: var(--pastel-beige);
  padding: 20px;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.treatment-group-card:hover {
  background-color: var(--pastel-cream);
  transform: translateY(-2px);
}

.treatment-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.treatment-group-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
  flex: 1;
}

.treatment-group-count {
  font-size: 14px;
  color: var(--text-secondary);
  font-weight: 400;
}

.treatment-group-preview {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.treatment-group-preview::-webkit-scrollbar {
  display: none;
}

.treatment-group-preview-image {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
  flex-shrink: 0;
}

.treatment-group-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.treatment-group-cta {
  font-size: 14px;
  color: var(--accent-dark);
  font-weight: 500;
}

/* Suggestion Detail View */
.suggestion-detail-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 24px;
}

.suggestion-back-button {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 2.5px solid var(--accent-dark);
  background-color: transparent;
  color: var(--accent-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.suggestion-back-button:hover {
  background-color: rgba(74, 70, 64, 0.1);
}

.suggestion-back-button svg {
  width: 20px;
  height: 20px;
}

.suggestion-detail-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 4px 0;
}

.suggestion-detail-subtitle {
  font-size: 14px;
  color: var(--text-secondary);
  margin: 0;
}

.results-description {
  padding: 16px;
  border-radius: 12px;
  background-color: var(--pastel-beige);
  color: var(--text-primary);
  font-size: 14px;
  line-height: 1.6;
}

.results-description strong {
  font-weight: 600;
}

.case-cards-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.case-card {
  border-radius: 16px;
  background-color: var(--pastel-beige);
  overflow: hidden;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.case-card:hover {
  background-color: var(--pastel-cream);
  transform: translateY(-2px);
}

.case-card-image {
  width: 100%;
  height: 200px;
  background-color: var(--bg-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
