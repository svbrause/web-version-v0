}

.landing-cta-button:active {
  transform: translateY(0);
}

.landing-cta-subtext {
  font-size: 13px;
  color: var(--text-secondary);
  line-height: 1.5;
  margin: 0;
  margin-top: -8px;
  text-align: center;
  width: 100%;
}

/* Simplified Provider Section */
.landing-provider-simple {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-top: 4px;
}

.provider-image-small {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(74, 70, 64, 0.15);
}

.provider-photo-small {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.provider-name-small {
  font-size: 14px;
  font-weight: 400;
  color: var(--text-secondary);
}

/* Benefit Statement */
.landing-benefit {
  width: 100%;
  padding: 14px 16px;
  background-color: var(--pastel-beige);
  border-radius: 12px;
  margin-top: 4px;
}

.landing-benefit p {
  font-size: 14px;
  font-weight: 400;
  color: var(--text-primary);
  line-height: 1.5;
  margin: 0;
  text-align: left;
}


@media (max-width: 480px) {
  .landing-screen {
    padding: 24px 16px 100px;
  }
  
  .landing-close-button {
    top: 16px;
    right: 16px;
    width: 36px;
    height: 36px;
  }
  
  .landing-close-button svg {
    width: 18px;
    height: 18px;
  }
  
  .landing-title {
    font-size: 26px;
  }
  
  .landing-subtitle {
    font-size: 15px;
  }
  
  .landing-content {
    gap: 18px;
  }

  .landing-logo {
    max-width: 160px;
    margin-bottom: 6px;
  }

  .logo-image {
    max-height: 50px;
  }

  .provider-image-small {
    width: 44px;
    height: 44px;
  }

  .provider-name-small {
    font-size: 13px;
  }

  .landing-benefit {
    padding: 12px 14px;
  }

  .landing-benefit p {
    font-size: 13px;
  }

  .landing-cta-button {
    padding: 16px 22px;
    font-size: 17px;
  }

  .landing-cta-subtext {
    font-size: 12px;
  }
}
