  position: relative;
}

/* Hide header (including progress bar) when celebration or lead capture screen is visible */
.app-container.header-hidden > .header {
  display: none;
}

/* When header is hidden (results screen shown) */
.app-container.header-hidden > .main-content {
  min-height: 100vh;
  min-height: var(--actual-vh, 100vh);
  padding: 20px;
  overflow-y: auto;
  overflow-x: hidden;
  display: flex;
